<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp">

        <Button
            android:id="@+id/but_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edText1"
            android:layout_marginTop="60dp"
            android:onClick="PressOne"
            android:text="1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:layout_below="@+id/but_8"
            android:layout_toEndOf="@+id/but_7"
            android:layout_toRightOf="@+id/but_7"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:layout_below="@+id/but_6"
            android:layout_toEndOf="@+id/but_5"
            android:layout_toRightOf="@+id/but_5"
            android:text="9"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:layout_below="@+id/but_5"
            android:layout_toEndOf="@+id/but_7"
            android:layout_toRightOf="@+id/but_7"
            android:text="8"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:layout_alignLeft="@+id/but_4"
            android:layout_alignStart="@+id/but_4"
            android:layout_below="@+id/but_4"
            android:text="7"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:layout_alignBaseline="@+id/but_5"
            android:layout_alignBottom="@+id/but_5"
            android:layout_toEndOf="@+id/but_5"
            android:layout_toRightOf="@+id/but_5"
            android:text="6"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/but_2"
            android:layout_toEndOf="@+id/but_4"
            android:layout_toRightOf="@+id/but_4"
            android:backgroundTint="@color/teal_200"
            android:text="5"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:layout_alignLeft="@+id/but_1"
            android:layout_alignStart="@+id/but_1"
            android:layout_below="@+id/but_1"
            android:text="4"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:layout_alignBaseline="@+id/but_2"
            android:layout_alignBottom="@+id/but_2"
            android:layout_toEndOf="@+id/but_2"
            android:layout_toRightOf="@+id/but_2"
            android:text="3"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:layout_alignBaseline="@+id/but_1"
            android:layout_alignBottom="@+id/but_1"
            android:layout_toEndOf="@+id/but_1"
            android:layout_toRightOf="@+id/but_1"
            android:text="2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/but_6"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_Sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/but_Add"
            android:layout_alignStart="@+id/but_Add"
            android:layout_below="@+id/but_Add"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:text="-"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_Mul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/but_Sub"
            android:layout_alignStart="@+id/but_Sub"
            android:layout_below="@+id/but_6"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:text="*"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_Div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/but_Mul"
            android:layout_alignStart="@+id/but_Mul"
            android:layout_below="@+id/but_9"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:text="/"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <Button
            android:id="@+id/but_calc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/but_0"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="-46dp"
            android:layout_toEndOf="@+id/but_0"
            android:layout_toRightOf="@+id/but_0"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:text="="
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/but_7"
            android:layout_toLeftOf="@+id/but_8"
            android:layout_toStartOf="@+id/but_8"
            android:text="."
            android:backgroundTint="@color/teal_200"
            android:textSize="18sp" />

        <Button
            android:id="@+id/but_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/but_Div"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-248dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:text="clear"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>